{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

    <div class="container" style="display:flex;justify-content: center;margin-top: 20px">
        <div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
{#        <div class="card-header"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ products.0.name }}</font></font></div>#}
            <img src="{{ products.0.image }}" alt="">
            <div class="card-body">
                <h1 class="card-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ products.0.name }}</font></font></h1>
            <p class="card-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">{{ products.0.description }}</font></font></p>
            <p>Prix : {{ products.0.price }} Euros</p>
            </div>
        </div>
    </div>

{% endblock %}
