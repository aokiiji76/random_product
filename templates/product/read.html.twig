{% extends 'base.html.twig' %}

{% block title %}RandomProduct{% endblock %}

{% block body %}
    
    <div class="bg-image w-full min-h-screen flex flex-wrap justify-center items-center gap-5 py-5">
        
{#        <button class="bg-black bg-opacity-100 hover:opacity-80 px-5 py-3 text-white  text-sm capitalize shadow-sm font-medium tracking-wider border text-grey-600 rounded-full hover:shadow-lg ">#}
{#            <a href="/">Page aléatoire</a></button>#}
    
       
        <button class="bg-black bg-opacity-100 hover:opacity-80 px-5 py-3 text-white  text-sm capitalize shadow-sm font-medium tracking-wider border text-grey-600 rounded-full hover:shadow-lg "
                onclick="window.location.href = '{{ path('read_product') }}';">
            Page aléatoire
        </button>
       
        
        <div class="backdrop w-10/12 md:w-1/4 bg-black bg-opacity-70 rounded p-3 text-white border border-gray-300 shadow-lg">
            <!-- header -->
            <div class="w-full mb-3 pb-3 flex justify-center border-b border-1 border-white">
                <h3 class="text-5xl font-semibold text-shadow">{{ product.0.name }}</h3>
            </div>
            <!-- body -->
            <div>
                <img src="{{ product.0.image }}" alt="image1" class="w-full h-48 object-cover mb-2">
                <p class="mb-3 tracking-wide text-base text-shadow">
                    {{ product.0.description }}
                </p>
                <p class="mb-3 tracking-wide text-base text-shadow">
                    Prix : {{ product.0.price }} euros
                </p>
                
            </div>
        </div>
    </div>
    
  
    
    
    
    
    
   
    
    
    
{% endblock %}
